{
  "model": "sonnet",
  "includeCoAuthoredBy": false,
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "say 'Greg, I need your input'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "say 'Done'"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "for f in $CLAUDE_FILE_PATHS; do [[ $f == *.rb ]] && rubocop -A \"$f\"; done"
          },
          {
            "type": "command",
            "command": "for f in $CLAUDE_FILE_PATHS; do [[ $f == *.ts || $f == *.tsx ]] && npx prettier -w \"$f\"; done"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(bin/rails:*)",
      "Bash(bin/rubocop:*)",
      "Bash(bundle:*)",
      "Bash(cp:*)",
      "Bash(echo:*)",
      "Bash(find:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git init:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(mv:*)",
      "Bash(npm install:*)",
      "Bash(npm run build:*)",
      "Bash(npm run lint)",
      "Bash(npm test:*)",
      "Bash(npx:*)",
      "Bash(sed:*)",
      "Bash(rails routes)",
      "Bash(rails:*)"
    ],
    "deny": []
  }
}
