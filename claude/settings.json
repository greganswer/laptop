{
  "model": "sonnet",
  "includeCoAuthoredBy": false,
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "say 'Greg, I need your input.'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "say 'Done'"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "if [[ \"${TOOL_INPUT_file_path}\" == *.rb ]]; then rubocop -A \"$TOOL_INPUT_file_path\"; fi"
          },
          {
            "type": "command",
            "command": "if [[ \"${TOOL_INPUT_file_path}\" == *.ts ]]; then npx prettier -w \"$TOOL_INPUT_file_path\"; fi"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(bin/rails:*)",
      "Bash(bin/rubocop:*)",
      "Bash(bundle:*)",
      "Bash(find:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git init:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(mv:*)",
      "Bash(npm run build:*)",
      "Bash(npm run lint)",
      "Bash(npm test:*)",
      "Bash(npx:*)",
      "Bash(rails routes)",
      "Bash(rails:*)"
    ],
    "deny": []
  }
}
